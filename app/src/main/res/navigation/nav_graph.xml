<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/Page1Fragment"
        android:name="app.gazdik_app.page1.Page1Fragment"
        android:label="@string/page1_fragment_label"
        tools:layout="@layout/fragment_page1">

    </fragment>

    <fragment
        android:id="@+id/FirstFragment"
        android:name="app.gazdik_app.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />

        <action
            android:id="@+id/action_FirstFragment_to_Page1Fragment"
            app:destination="@id/Page1Fragment"/>

    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="app.gazdik_app.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
</navigation>